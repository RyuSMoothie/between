<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity ="center"
        android:fillViewport="true"
        android:layout_marginTop="0dp"
        android:id="@+id/scrollView">
        <FrameLayout
            android:orientation="vertical"
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/page2"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="500dp"
                android:background="#00ff0000"
                android:text=" "/>

            <Button
                android:id="@+id/btn4"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="835dp"
                android:background="#00ff0000"
                android:text=" "/>

            <!-- 날짜 설정 버튼-->
            <Button
                android:id="@+id/btn5"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="260dp"
                android:background="#00ff0000"
                android:text=" " />

            <!-- 시간 설정 버튼-->
            <Button
                android:id="@+id/btn6"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="260dp"
                android:background="#00ff0000"
                android:text=" " />

            <!-- 날짜 설정 버튼-->
            <Button
                android:id="@+id/btn7"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="320dp"
                android:background="#00ff0000"
                android:text=" " />

            <!-- 시간 설정 버튼-->
            <Button
                android:id="@+id/btn8"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="320dp"
                android:background="#00ff0000"
                android:text=" " />

            <EditText
                android:id="@+id/Edit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/edit_title"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="210dp"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/Edit_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/edit_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="675dp"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/Edit_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="450dp"
                android:hint="@string/edit_place"
                android:inputType="textPersonName" />

            <!-- 날짜 -->
            <EditText
                android:id="@+id/txtdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="260dp"
                android:textSize="20sp"
                android:hint="시작 날짜 선택"
                />

            <!-- 시간 -->
            <EditText
                android:id="@+id/txttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="260dp"
                android:textSize="20sp"
                android:hint="시작 시간"
                />

            <!-- 날짜 -->
            <EditText
                android:id="@+id/txtdate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="320dp"
                android:textSize="20sp"
                android:hint="종료 날짜 선택"
                />

            <!-- 시간 -->
            <EditText
                android:id="@+id/txttime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="320dp"
                android:textSize="20sp"
                android:hint="종료 시간"
                />
            <TextView
                android:id="@+id/tv"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:hint="시간 입력!"
                android:textStyle="bold"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="510dp"
                tools:ignore="MissingConstraints"
                />





        </FrameLayout>
    </ScrollView>
</FrameLayout>
